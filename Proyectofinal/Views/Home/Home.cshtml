@using Proyectofinal.Models
@{
    ViewBag.Title = "Home";
}

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>Resumamos</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css">
</head>
<body>
    <style>
        .carru {
            opacity: 0.4;
        }

        .services .icon-box {
            text-align: center;
            border: 1px solid #ededed;
            padding: 80px 20px;
            transition: all ease-in-out 0.3s;
        }

            .services .icon-box .icon {
                margin: 0 auto;
                width: 64px;
                height: 64px;
                background: #17a2b8;
                border-radius: 5px;
                transition: all .3s ease-out 0s;
                display: flex;
                align-items: center;
                justify-content: center;
                margin-bottom: 20px;
                transform-style: preserve-3d;
            }

                .services .icon-box .icon i {
                    color: #fff;
                    font-size: 28px;
                }

                .services .icon-box .icon::before {
                    position: absolute;
                    content: '';
                    left: -8px;
                    top: -8px;
                    height: 100%;
                    width: 100%;
                    background: #70bfcb;
                    border-radius: 5px;
                    transition: all .3s ease-out 0s;
                    transform: translateZ(-1px);
                }

            .services .icon-box h4 {
                font-weight: 700;
                margin-bottom: 15px;
                font-size: 24px;
            }

                .services .icon-box h4 a {
                    color: #17a2b8;
                }

            .services .icon-box p {
                line-height: 24px;
                font-size: 14px;
                margin-bottom: 0;
            }

            .services .icon-box:hover {
                background: #17a2b8;
                border-color: #17a2b8;
            }

                .services .icon-box:hover .icon {
                    background: #fff;
                }

                    .services .icon-box:hover .icon i {
                        color: #17a2b8;
                    }

                    .services .icon-box:hover .icon::before {
                        background: #70bfcb;
                    }

                .services .icon-box:hover h4 a, .services .icon-box:hover p {
                    color: #fff;
                }
        .team .member {
            text-align: center;
            margin-bottom: 20px;
            box-shadow: 0px 0px 12px 0px rgba(0, 0, 0, 0.1);
            padding: 30px 20px;
            background: #fff;
        }

            .team .member img {
                max-width: 60%;
                border-radius: 50%;
                margin: 0 0 30px 0;
            }

            .team .member h4 {
                font-weight: 700;
                margin-bottom: 2px;
                font-size: 18px;
            }

            .team .member span {
                font-style: italic;
                display: block;
                font-size: 13px;
            }

            .team .member p {
                padding-top: 10px;
                font-size: 14px;
                font-style: italic;
                color: #aaaaaa;
            }

            .team .member .social {
                margin-top: 15px;
            }

                .team .member .social a {
                    color: #919191;
                    transition: 0.3s;
                }

                    .team .member .social a:hover {
                        color: #e96b56;
                    }

                .team .member .social i {
                    font-size: 18px;
                    margin: 0 2px;
                }
                .boquita:hover{
                    color:white;
                    text-decoration:none;
                }
                .boquita{
                    color:black;
                }

    </style>
    <br />
    <br />
   

    <h1 style="text-align:center;"><b>¡Te damos la bienvenida a Resumamos! </b></h1>
    <!--Inicio carrusel-->
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 carru" style="height:300px;" width="300px;" src="~/Content/slide-2.jpg" alt="First slide">
                <div class="carousel-caption">
                    <h3 class="carrusel" style="color:black;">Resumamos!</h3>
                    <p class="carrusel" style="color:black;">
                        <b>Es un lugar donde los estudiantes de secundaria podrán encontrar todo tipo de material y libros de estudio.</b>
                    </p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 carru" style="height:300px" width="300px" src="~/Content/slide-3.jpg" alt="Second slide">
                <div class="carousel-caption">
                    <h3 class="carrusel" style="color:black;">Motivación</h3>
                    <p class="carrusel" style="color:black;">
                        <b>Queremos generar un ambiente donde los estudiantes que no tienen tiempo de ponerse a realizar un resumen para preparar una materia puedan lograr tener el material de estudio igualmente a tiempo.</b>
                    </p>
                </div>
            </div>

        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    <!--Fin carrusel-->

    <section id="services" class="services">
        <div class="container">

            <div class="section-title" data-aos="fade-up">
                <h2 style="text-align:center !important">Nuestros Servicios</h2>
            </div>

            <div class="row">
                
                <div class="col-lg-6 col-md-6 d-flex align-items-stretch">
                    <a href="@Url.Action("Index","Home")" class="boquita" >
                        <div class="icon-box">
                            <div class="icon"><i class="fas fa-file-download"></i></div>
                            <h4>
                                Resumenes
                            </h4>
                            <p>Los estudiantes en esta seccion podran subir y descargar resumenes y materiales de estudios</p>
                        </div>
                    </a>
                </div>
               
                
                <div class="col-lg-6 col-md-6 d-flex align-items-stretch">
                    <a href="@Url.Action("Libros","Home")" class="boquita">
                        <div class="icon-box">
                            <div class="icon"><i class="fas fa-book"></i></div>
                            <h4 >
                                Libros
                            </h4>
                            <p>En esta seccion podran comprar y vender libros escolares y materiales de estudios </p>
                        </div>
                    </a>
                </div>
                

            </div>


        </div>
        <br />
        <br />
        
    </section>
  
</body>
</html>
