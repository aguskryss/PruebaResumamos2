@using Proyectofinal.Models
@{
    ViewBag.Title = "Aprobar";
}
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css">
    <title>Resumamos</title>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <!-- Hero Section -->

        <br />
        <br />
      



        <!-- Stats Gallery Section -->
        <div class="content content-shadow1">
            <div class="size_mother">

                <h3 class="Titulo"><b>Resumenes sin aprobar</b></h3>
                <div class="col1 pt-2 clear" style=" border-bottom:#d2d2d2 1px solid; padding-bottom:40px; ">
                    <div class="col1_2 fl l-2 clear">
                        <div class="container-">
                            <div class="row">

                                @foreach (Resumenes res in ViewBag.lista)
                                {


                                    <div class="col-lg-4 col-xs-6">
                                        <div class="card" style="box-shadow: 0 2px 10px -2px black;">
                                            <div class="card-body">
                                                <h4 class="card-title alert-info">@res.Nombre</h4>
                                                <p class="card-text">@BD.TraerMateriaxId(res.FkMateria).NombreMateria</p>
                                                <p class="card-text">@BD.TraerEscuelaxId(res.FkEscuela).NombreEscuela</p>
                                                <p class="card-text">Puntuacion: @res.Puntuacion</p>
                                                <p class="card-text"> Autor: @BD.TraerAutorResumen(res.IdResumen).Nombre @BD.TraerAutorResumen(res.IdResumen).Apellido</p>
                                                <p class="card-text">Puntuacion autor: @BD.TraerAutorResumen(res.IdResumen).Puntuacion</p>
                                                <div class="verMas">
                                                    <a href="@Url.Action("MiResumen", "Backoffice", new { id = res.IdResumen })" class="btn-lg btn-outline-primary"><b>Ver resumen</b></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                }

                            </div>
                            <center>
                                <div class="row">
                                    <div class="col-lg-6 col-xs-6">
                                        <a href="@Url.Action("AprobarTodos","Backoffice")" class="btn btn-lg btn-primary">Aprobar todos</a>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <a href="@Url.Action("RechazarTodosLosResumenes","Backoffice")" class="btn btn-lg btn-danger">Rechazar todos</a>
                                    </div>
                                </div>
                            </center>
                        </div>



                    </div>

                </div>
            </div>

        </div>







        <br />
        <center>
            <a type="Button" class="btn btn-primary" href="@Url.Action("index", "Backoffice")">Volver a la home <i class="fas fa-home"></i></a>
        </center>
        <br />
        <br />

        
    </div>


    <!-- Footer Section -->
    <!-- Copyrights Section -->
    <!-- Main Container Ends -->
</body>
</html>

